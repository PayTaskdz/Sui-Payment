		{
			"name": "Wallet",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200 || pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('testUserId', jsonData.userId);",
									"    pm.collectionVariables.set('testWalletAddress', jsonData.walletAddress);",
									"    pm.collectionVariables.set('testUsername', jsonData.username);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"alice_{{$randomInt}}\",\n  \"walletAddress\": \"0x{{$randomUUID}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/wallet/register",
							"host": ["{{baseUrl}}"],
							"path": ["wallet", "register"]
						},
						"description": "Register new user with wallet"
					}
				},
				{
					"name": "Check Wallet",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/wallet/check-wallet?address={{testWalletAddress}}",
							"host": ["{{baseUrl}}"],
							"path": ["wallet", "check-wallet"],
							"query": [
								{
									"key": "address",
									"value": "{{testWalletAddress}}"
								}
							]
						},
						"description": "Check if wallet is registered"
					}
				},
				{
					"name": "Set Default Receive Wallet",
