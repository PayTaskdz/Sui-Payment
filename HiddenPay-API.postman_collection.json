							"mode": "raw",
							"raw": "{\n  \"userId\": \"{{testUserId}}\",\n  \"walletId\": \"{{testOnchainWalletId}}\",\n  \"walletType\": \"onchain\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/wallet/default-receive",
							"host": ["{{baseUrl}}"],
							"path": ["wallet", "default-receive"]
						},
